
/* 头部开始 */
.top {
    padding: 0 20rpx;
    padding-top: 20rpx; 
    width: 100%;
    height: 404rpx;
    text-align: center;
    color: #fff;
    box-sizing: border-box;
    background: -webkit-linear-gradient(left,#F43A2A,#FFA224)
}
.top-pro {
    position: relative;
    box-sizing: border-box;
}
.top .job-number {
    position: absolute;
    right: 0;
}
.top-pro image {
    margin: 30rpx auto;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.top-pro .name {
    font-size: 24rpx;
}
.top-pro .state {
    margin: 20rpx auto;
    width: 360rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    text-align: center;
    background: rgba(244,164,96, 0.6)
}
/* 头部结束 */
.floor-plan image {
    margin-top: 20rpx;
    width: 100%;
    height: 300rpx;
}
.reject textarea {
    height: 200rpx;
}
.customer-details {
    margin-bottom: 30rpx;
}
.check-btn {
    width: 100%;
    height: 140rpx;
    padding: 20rpx;
    box-sizing: border-box;
    background: #fff;
}
.check-btn button {
    height: 76rpx;
    font-size: 32rpx;
    color: #fff;
}
.check-btn .submit-left {
    width: 340rpx;
    background: #F43A2A;
}
.check-btn .submit-right {
    margin-left: 40rpx;
    width: 200rpx;
    background: #FFA423;
} 