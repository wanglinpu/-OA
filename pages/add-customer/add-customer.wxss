page {
 background: #F0F1F3;
}
.container {
    padding: 30rpx 20rpx 40rpx 20rpx;
    box-sizing: border-box;
}.customer {
    margin-bottom: 60rpx;
    padding: 30rpx 20rpx 50rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
    background: #fff;
}
.customer-title {
    text-align: center;
    margin-bottom: 60rpx;
}
.customer-title text {
    color: #333333;
    font-size: 36rpx;
    font-weight: 700;
}
.customer-name {
    border-bottom: 2rpx solid #eee;
    padding: 40rpx 0;
}
.customer-name image {
    width: 66rpx;
    height: 66rpx;
}
.customer-name text {
    width: 100rpx;
    color: #1F1F1F;
    font-size: 28rpx;
    margin-left: 20rpx;
    margin-top: 22rpx;
}
.customer-name textarea {
    height: 60rpx;
    width: 100%;
    padding-left: 300rpx;
    box-sizing: border-box;

}
.business-type .form {
    font-size: 32rpx;
    color: #1F1F1F;
    margin: 32rpx 0;
}
.digest textarea {
    padding-top: 30rpx;
    padding-left: 100rpx;
    position: relative;
    width: 100%;
    height: 462rpx;
    border-radius: 10rpx;
    background: #eee;
    box-sizing: border-box;

}
.digest text {
    font-size: 32rpx;
    color: #1F1F1F;
    margin: 32rpx 0;
}
.digest image {
    position: absolute;
    left: 20rpx;
    top: 16rpx;
    width: 50rpx;
    height: 50rpx;

}