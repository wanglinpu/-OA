.customer-details {
    width: 100%;
    padding: 20rpx;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}
.customer-box {
    width: 100%;
    height: 100%;
    background: #fff;
    padding: 0 20rpx;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}
.customer-bar {
    width: 100%;
    height: 106rpx;
    line-height: 106rpx;
    font-size: 34rpx;
    left: 106rpx;
    border-bottom: 1px solid #ddd;
    box-sizing: border-box;

}
.customer-bar .call {
    position: relative;
    color: #999;
}
.customer-bar .name {
    position: absolute;
    color: #1F1F1F;
    right: 40rpx;
    /* right: -500rpx; */
}
.digest {
    width: 100%;
    box-sizing: border-box;
    margin-top:40rpx;
}
.digest text {
    color: #999;
    font-size: 34rpx;
    margin-top: 20rpx;
}
.reject textarea {
    padding-left: 0;
    color: #868686;
}
.adjunct {
    width: 100%;
}
.adjunct text {
    color: #999;
    margin-bottom: 20rpx;
    font-size: 34rpx;
    margin-top: 40rpx;
}
.adjunct imgs {
    width: 100%;
}
.adjunct image {
   width: 320rpx;
   height: 226rpx;
}
.adjunct .mr20 {
    margin-right: 24rpx;
}
/* 流程状态 */
.process {
    margin-top: 70rpx;
    width: 100%;
    height: 100%;
}
.process-top {
    width: 100%;
    color: #1F1F1F;
    text-align: center;
    margin-bottom: 40rpx;
}
.process-top .line {
    margin: 0 auto;
    width: 70rpx;
    border-radius: 10rpx;
    height: 10rpx;
    background: #ddd;
}
.process-top .title {
    font-size: 40rpx;
    margin: 20rpx;
    font-weight: bold;
}
.process-top .times {
    font-size: 32rpx;
    height: 40rpx;
}
.process .shape image {
    margin-top: 40rpx;
    width: 50rpx;
    height: 50rpx;
}
.process .state {
    position: relative;
    width: 100%;
    height: 160rpx;
    padding-top: 10rpx;
    padding-left: 20rpx;
    padding-bottom: 10rpx;
    background: #F9F9F9;
    margin-left: 26rpx;
    box-sizing: border-box;
}
.process-buttom  .dashed {
    position: absolute;
    left: 24rpx;
    top: 90rpx;
    width: 4rpx;
    height: 156rpx;
    border-left: 4rpx dashed #ddd;
}
.process .state image {
    /* margin: 20rpx 0rpx 0 40rpx; */
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.process-buttom {
    position: relative;
    margin-bottom: 46rpx;
}
.process-buttom .state-btm {
    margin-left: 20rpx;
}
.process-buttom .state-btm-top {
    position: relative;
}
.process-buttom .state-btm .names {
    color: #1F1F1F;
    font-size: 28rpx;
}
.process-buttom .state-btm-top .time {
    position: absolute;
    right: 0;
    color: #BABABA;
}
.process-buttom .state-btm .launch {
    color: #F06666;
    font-size: 32rpx;
    margin: 20rpx 0;
}
.process .explain {
    overflow : hidden;
    color: #BABABA;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

