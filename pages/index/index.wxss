}    */
.tab-item {
  text-align: center;
  color: #000;
}
.swiper {
      height: 2000rpx;
  }
.on {
  font-size: 30rpx;
  color: #f65959;
  font-weight: 900;
  border-bottom: 5rpx solid #f65959;
}
